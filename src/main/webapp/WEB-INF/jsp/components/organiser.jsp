<div class="row">

    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Organiser</h5>

                <form class="row g-3">
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <select class="form-select" id="film" aria-label="State">
                                <option selected>New York</option>
                                <option value="1">Oregon</option>
                                <option value="2">DC</option>
                            </select>
                            <label for="film">Film</label>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-floating">
                            <input type="date" class="form-control" id="dateDebut" placeholder="Date de debut">
                            <label for="dateDebut">Date de debut</label>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Organiser</button>
                        <button type="reset" class="btn btn-secondary">Annuler</button>
                    </div>
                </form>
                
            </div>
        </div>
        
    </div>
</div>